<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record model="ir.module.category" id="module_egp_letter">
        <field name="name">Letter Management System</field>
        <field name="description">Letter Management System</field>
        <field name="sequence">5</field>
    </record>

    <!--  Admin group-->
    <record model="res.groups" id="egp_letter_mis_admin">
        <field name="name">EGP Letter MIS admin</field>
        <field name="category_id" ref="module_egp_letter"/>
    </record>
    <record id="egp_letter_admin_records" model="ir.rule">
        <field name="name">EGP Letter MIS admin reocrds</field>
        <field name="model_id" ref="model_egp_letter"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('egp_letter_mis_admin'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record model="res.groups" id="egp_letter_development_department">
        <field name="name">EGP Letter Development Department </field>
        <field name="category_id" ref="module_egp_letter"/>
    </record>
    <record id="egp_letter_development_records" model="ir.rule">
        <field name="name">EGP Letter MIS Development reocrds</field>
        <field name="model_id" ref="model_egp_letter"/>
<!--        <field name="domain_force">['|',('create_uid','=',user.id),('recipients','=',4)]</field>-->
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('egp_letter_development_department'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>


     <record model="res.groups" id="egp_letter_analysis_department">
        <field name="name">EGP Letter Analysis Department </field>
        <field name="category_id" ref="module_egp_letter"/>
    </record>
    <record id="egp_letter_analysis_records" model="ir.rule">
        <field name="name">EGP Letter MIS Analysis reocrds</field>
        <field name="model_id" ref="model_egp_letter"/>
<!--        <field name="domain_force">['|',('create_uid','=',user.id),('recipients','=',5)]</field>-->
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('egp_letter_analysis_department'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>


</odoo>