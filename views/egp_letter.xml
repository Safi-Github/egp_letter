<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    //all form views
    <record id="egp_execution_form_view" model="ir.ui.view">
        <field name="name">egp.execution.form.view</field>
        <field name="model">egp.letter.execution</field> <!-- Replace with your actual model -->
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="number_warida"/>
                    <field name="Tarikh_warida"/>
                    <field name="pathway"/>
                    <field name="department_id"/>
                    <field name="id_manager" invisible="1"/>
                    <field name="departmentParent_id" invisible="1"/>
                    <field name="department_domain" invisible="1"/>
                    <!--                    <field name="parent_id" invisible="1"/>-->
                    <!--                    <field name="child_ids" />-->
                    <field name="employeeGet_id" invisible="1"/>
                    <field name="userGet_id" invisible="1"/>
                    <field name="name" widget="text" style="min-height: 100px;"/>
                </group>
            </form>
        </field>
    </record>

    <record id="egp_letter_outbox_form_view" model="ir.ui.view">
        <field name="name">egp.letter.outbox.form.view</field>
        <field name="model">egp.letter.outbox</field>
        <field name="arch" type="xml">
            <form string="Letter">
                <header>
                    <button name="adding_record_to_inbox_model" string="Send" type="object"
                        class="oe_highlight"/>
<!--                        invisible="[('state', '!=', 'draft')]" -->
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="date_issue"/>
                        </group>
                    </group>
                    <group>
                        <field name="recipients"/>
                        <field name="carbon_copies" widget="many2many_tags"/>
                        <field name="name"/>
                        <field name="content"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="egp_letter_inbox_form_view" model="ir.ui.view">
        <field name="name">egp.letter.inbox.form.view</field>
        <field name="model">egp.letter.inbox</field>
        <field name="arch" type="xml">
            <form string="Letter">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number" readonly="True"/>
                        </group>
                        <group>
                            <field name="date_issue" readonly="True"/>
                        </group>
                    </group>
                    <group>
                        <field name="sender" readonly="True"/>
                        <field name="recipients" readonly="True"/>
                        <field name="carbon_copies" widget="many2many_tags" readonly="True"/>
                        <field name="name" readonly="True"/>
                        <field name="content" readonly="True"/>
                    </group>
                    <notebook>
                        <page string="Executions">
                            <field name="execution_ids"
                                   context="{'form_view_ref': 'egp_letter.egp.execution.form.view'}">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    //all the search views
    <record id="egp_letter_outbox_search_view" model="ir.ui.view">
        <field name="name">egp.letter.outbox.search.view</field>
        <field name="model">egp.letter.outbox</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Subject"
                       filter_domain="['|', ('name','ilike',self),('serial_number','ilike',self)]"/>
            </search>
        </field>
    </record>

