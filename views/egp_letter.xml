    <record id="egp_letter_inbox_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.inbox.tree.view</field>
        <field name="model">egp.letter.inbox</field>
        <field name="arch" type="xml">
            <tree string="Letters">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="date_issue"/>
                <field name="sender" />
                <field name="recipients" />
            </tree>
        </field>
    </record>
    <record id="egp_letter_outbox_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.outbox.tree.view</field>
        <field name="model">egp.letter.outbox</field>
        <field name="arch" type="xml">
            <tree string="Letters">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="date_issue"/>
                <field name="state"/>
                <field name="recipients"/>
            </tree>
        </field>
    </record>
    <record id="egp_letter_execution_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.execution.tree.view</field>
        <field name="model">egp.letter.execution</field>
        <field name="arch" type="xml">
            <tree string="Executions">
                <field name="letter_id"/>
                <field name="pathway"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    //all the actions
    <record id="action_egp_letter_inbox_tree_view" model="ir.actions.act_window">
        <field name="name">inbox action</field>
        <field name="res_model">egp.letter.inbox</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"default_desired_value": ""}</field>
        <field name="domain">[('recipients', '=', context.get('default_desired_value'))]</field>
        <field name="view_id" ref="egp_letter_inbox_tree_view"/>
        <field name="views">[(False, 'tree'), (ref('egp_letter_inbox_form_view'), 'form')]</field>
    </record>
    <record id="action_egp_letter_outbox_tree_view" model="ir.actions.act_window">
        <field name="name">Letters</field>
        <field name="res_model">egp.letter.outbox</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('create_uid','=',uid)]</field>
        <field name="view_id" ref="egp_letter_outbox_tree_view"/>
        <field name="views">[(False, 'tree'), (ref('egp_letter_outbox_form_view'), 'form')]</field>
    </record>
    //server action
    <record id="get_myDepartmentId_and_updateContext" model="ir.actions.server">
        <field name="name">Execute Multiple Actions</field>
        <field name="model_id" ref="egp_letter.model_egp_letter_inbox"/> <!-- Replace 'egp_letter.model_egp_letter_inbox' with the actual model ID -->
        <field name="state">code</field>
        <field name="code">
            model.open_custom_window()
        </field>
    </record>
    <record id="action_egp_letter_execution" model="ir.actions.act_window">
        <field name="name">Executions</field>
        <field name="res_model">egp.letter.execution</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree</field>
    </record>

    //all menus

    <menuitem id="menu_executions"
              name='Executions'
              parent="main_menu_letter_management"
              sequence="10" action="action_egp_letter_execution"/>
    <menuitem id="menu_inbox"
              name='Inbox'
              parent="main_menu_letter_management"
              sequence="20" action="action_egp_letter_inbox_tree_view"/>
    <menuitem id="menu_outbox"
              name='Outbox'
              parent="main_menu_letter_management"
              sequence="30" action="action_egp_letter_outbox_tree_view"/>
    <menuitem id="get_dep_id_and_update_context"
              name='Get Department and Update Context'
              parent="main_menu_letter_management"
              sequence="40" action="get_myDepartmentId_and_updateContext"/>

</odoo>

