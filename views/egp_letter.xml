<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="egp_execution_form_view" model="ir.ui.view">
        <field name="name">egp.execution.form.view</field>
        <field name="model">egp.letter.execution</field> <!-- Replace with your actual model -->
        <field name="arch" type="xml">
            <form>
                <group>

                    <field name="number_warida"/>
                    <field name="Tarikh_warida"/>
                    <field name="pathway"/>
                    <field name="department_id"/>
                    <field name="id_manager" invisible="1"/>
                    <field name="departmentParent_id" invisible="1"/>
                    <field name="department_domain" invisible="1"/>
                    <!--                    <field name="parent_id" invisible="1"/>-->
                    <!--                    <field name="child_ids" />-->
                    <field name="employeeGet_id" invisible="1"/>
                    <field name="userGet_id" invisible="1"/>
                    <field name="name" widget="text" style="min-height: 100px;"/>
                </group>
            </form>
        </field>
    </record>

    <record id="egp_letter_form_view" model="ir.ui.view">
        <field name="name">egp.letter.form.view</field>
        <field name="model">egp.letter</field>
        <field name="arch" type="xml">
            <form string="Letter">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="date_issue"/>
                        </group>
                    </group>
                    <group>
                        <field name="recipients"/>
                        <field name="carbon_copies" widget="many2many_tags"/>
                        <field name="name"/>
                        <field name="content"/>
                    </group>
                    <notebook>
                        <page string="Executions">
                            <field name="execution_ids"
                                   context="{'form_view_ref': 'egp_letter.egp.execution.form.view'}">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>


            </form>

        </field>
    </record>

    //egp letter search view
    <record id="egp_letter_search_view" model="ir.ui.view">
        <field name="name">egp.letter.search.view</field>
        <field name="model">egp.letter</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Subject"
                       filter_domain="['|', ('name','ilike',self),('serial_number','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="egp_letter_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.tree.view</field>
        <field name="model">egp.letter</field>
        <field name="arch" type="xml">
            <tree string="Letters">
<!--                <field name="department_id"/>-->
                <field name="name"/>
                <field name="serial_number"/>
                <field name="date_issue"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>
    <record id="egp_letter_execution_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.execution.tree.view</field>
        <field name="model">egp.letter.execution</field>
        <field name="arch" type="xml">
            <tree string="Executions">
                <field name="letter_id"/>
                <field name="pathway"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_egp_letter" model="ir.actions.act_window">
        <field name="name">Letters</field>
        <field name="res_model">egp.letter</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_egp_letter_execution" model="ir.actions.act_window">
        <field name="name">Executions</field>
        <field name="res_model">egp.letter.execution</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_egp_letter_warida_tree_view" model="ir.actions.act_window">
        <field name="name">Letters</field>
        <field name="res_model">egp.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('recipients', '=', 'model_egp_letter.get_domain')]</field>
        <field name="view_id" ref="egp_letter_tree_view"/>
    </record>

    <record id="action_egp_letter_sadira_tree_view" model="ir.actions.act_window">
        <field name="name">Letters</field>
        <field name="res_model">egp.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('create_uid', '=', uid)]</field>
        <field name="view_id" ref="egp_letter_tree_view"/>
    </record>

    <menuitem id="menu_letters"
              name='Letters'
              parent="main_menu_letter_management"
              sequence="10" action="action_egp_letter"/>
    <menuitem id="menu_executions"
              name='Executions'
              parent="main_menu_letter_management"
              sequence="20" action="action_egp_letter_execution"/>

    <menuitem id="menu_warida"
              name='Inbox'
              parent="main_menu_letter_management"
              sequence="30" action="action_egp_letter_warida_tree_view"/>

    <menuitem id="menu_sadira"
              name='Outbox'
              parent="main_menu_letter_management"
              sequence="40" action="action_egp_letter_sadira_tree_view"/>
</odoo>

