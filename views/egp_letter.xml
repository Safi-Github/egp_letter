<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    //all form views
    <record id="egp_letter_outbox_form_view" model="ir.ui.view">
        <field name="name">egp.letter.outbox.form.view</field>
        <field name="model">egp.letter.outbox</field>
        <field name="arch" type="xml">
            <form string="Letter">
                <header>
                    <button name="adding_record_to_inbox_model" string="Send" type="object"
                        class="oe_highlight"/>
<!--                        invisible="[('state', '!=', 'draft')]" -->
                    <field name="state" widget="statusbar" nolabel="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number"/>
                        </group>
                        <group>
                            <field name="date_issue"/>
                        </group>
                    </group>
                    <group>
                        <field name="recipients"/>
                        <field name="carbon_copies" widget="many2many_tags"/>
                        <field name="name"/>
                        <field name="content"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="egp_letter_inbox_form_view" model="ir.ui.view">
        <field name="name">egp.letter.inbox.form.view</field>
        <field name="model">egp.letter.inbox</field>
        <field name="arch" type="xml">
            <form string="Letter">
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="serial_number" readonly="True"/>
                        </group>
                        <group>
                            <field name="date_issue" readonly="True"/>
                        </group>
                    </group>
                    <group>
                        <field name="sender" readonly="True"/>
                        <field name="recipients" readonly="True"/>
                        <field name="carbon_copies" widget="many2many_tags" readonly="True"/>
                        <field name="name" readonly="True"/>
                        <field name="content" readonly="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    //all tree views
    <record id="egp_letter_inbox_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.inbox.tree.view</field>
        <field name="model">egp.letter.inbox</field>
        <field name="arch" type="xml">
            <tree string="Letters">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="date_issue"/>
                <field name="sender" />
                <field name="recipients" />
            </tree>
        </field>
    </record>
    <record id="egp_letter_outbox_tree_view" model="ir.ui.view">
        <field name="name">egp.letter.outbox.tree.view</field>
        <field name="model">egp.letter.outbox</field>
        <field name="arch" type="xml">
            <tree string="Letters">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="date_issue"/>
                <field name="state"/>
                <field name="recipients"/>
            </tree>
        </field>
    </record>
    //all the actions
    <record id="action_egp_letter_inbox_tree_view" model="ir.actions.act_window">
        <field name="name">inbox letters</field>
        <field name="res_model">egp.letter.inbox</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="view_id" ref="egp_letter_inbox_tree_view"/>
        <field name="views">[(False, 'tree'), (ref('egp_letter_inbox_form_view'), 'form')]</field>
    </record>
    <record id="action_egp_letter_outbox_tree_view" model="ir.actions.act_window">
        <field name="name">Letters</field>
        <field name="res_model">egp.letter.outbox</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('create_uid','=',uid)]</field>
        <field name="view_id" ref="egp_letter_outbox_tree_view"/>
        <field name="views">[(False, 'tree'), (ref('egp_letter_outbox_form_view'), 'form')]</field>
    </record>

    //all menus
    <menuitem id="menu_inbox"
              name='Inbox'
              parent="main_menu_letter_management"
              sequence="20" action="action_egp_letter_inbox_tree_view"/>
    <menuitem id="menu_outbox"
              name='Outbox'
              parent="main_menu_letter_management"
              sequence="30" action="action_egp_letter_outbox_tree_view"/>

</odoo>

